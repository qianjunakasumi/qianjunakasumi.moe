---
import Favicon from "./Favicon.astro";
import PrintQianju from "./PrintQianju.astro";
import '@/styles/global.css';

interface Props {
	title: string;
	description: string;
	language?: string;
	isTittleSuffix?: boolean;
}

const {
    title,
    description,
    language = 'en',
    isTittleSuffix = false
} = Astro.props;

const [ titleSuffix, descSuffix ] = [
	'／@qianjunakasumi 千橘雫霞',
	' ・ @qianjunakasumi 千橘雫霞／Official'
];

---

<!doctype html>
<html lang={ language }>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ description + descSuffix } />
		<meta name="viewport" content="width=device-width" />
		<Favicon />
		<link rel="sitemap" href="/sitemap-index.xml" />
        <title>{ isTittleSuffix ? title + titleSuffix : title }</title>
		<slot name="head" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
	}

	html {
		font-family: system-ui, sans-serif;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>

<PrintQianju />
