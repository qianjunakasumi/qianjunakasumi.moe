---
import Layout from '@/layouts/Layout.astro';
import ResumeBaseLayout from "@/layouts/Resume/ResumeBaseLayout.astro";
import {ResumeContent} from "@/i18n/resume/ja";
---

<Layout
        title="Resume"
        description="Resume of qianjunakasumi"
        language="ja"
        isTittleSuffix="true"
>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chiron-sung-hk-webfont@1/css/vf.min.css" slot="head">
    <ResumeBaseLayout
            titles={ResumeContent.titles}
            headers={ResumeContent.headers}
            certs={ResumeContent.certs}
            summerCamps={ResumeContent.summerCamps}
            practices={ResumeContent.practices}
    />
</Layout>

<style is:global>
    h1, h2, h3, h4, h5, h6, p, span {
        font-family: 'Chiron Sung HK WS', serif;
    }
</style>