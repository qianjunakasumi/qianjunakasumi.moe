<style>
    .bar {
        width: 100%;
        height: 6px;
        background-color: #fcc3ca;
    }

    .qianju-sans {
        font-family: sans-serif;
    }

    .qianju {
        font-family: 'Red Hat Mono Variable', monospace;
    }

    .qwq {
        font-family: serif;
        font-size: 1.06rem;
    }

    footer {
        color: #232129;
    }
</style>
